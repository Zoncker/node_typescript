{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "declaration": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "pretty": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ]
}